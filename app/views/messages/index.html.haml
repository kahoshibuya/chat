.contents 
  =render 'devise/shared/side_bar'
  .chat-main
    //メッセージ表示中のグループ
    .main-header
      .current-group
        .current-group__title test-group
        .current-group__members 
          %li.current-group__members__index Member : 
          %p.current-group__members__member seo
          %p.current-group__members__member neko

      //editボタン
      %link_to
        .main-header__edit-btn Edit

    .messages-box
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'image-label' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'input'
        = f.submit 'Send', class: 'submit-btn'
        
